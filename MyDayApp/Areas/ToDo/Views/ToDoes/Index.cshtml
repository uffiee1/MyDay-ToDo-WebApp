@model IEnumerable<MyDayApp.Models.ToDo>

@{
    ViewData["Title"] = "Index";
}

<h1>ToDo List</h1>

<p>
    <a asp-action="Create">Create New Task</a>
</p>

@*ProgressBarr*@
<div class="progress">
    <div class="progress-bar progress-bar-striped progress-bar-animated" role="progressbar" aria-valuenow="75" aria-valuemin="0" aria-valuemax="100" style="width: 75%"></div>
</div>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Event)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Location)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StartDateTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EndDateTime)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Event)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Location)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StartDateTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EndDateTime)
            </td>
            <td>
                
                <a asp-action="Edit" asp-route-id="@item.ToDoID">Edit</a>
                <a asp-action="Details" asp-route-id="@item.ToDoID">Details</a>
                <a asp-action="Delete" asp-route-id="@item.ToDoID">Delete</a>

            </td>
        </tr>
}
    </tbody>
</table>
